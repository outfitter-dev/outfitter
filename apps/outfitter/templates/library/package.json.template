		"@biomejs/biome": "^2.3.12",
		"@types/bun": "^1.3.7",
		"bunup": "^0.16.20",
		"typescript": "^5.9.3"
	},
	"outfitter": {
		"template": {
			"kind": "library",
			"placement": "packages",
			"surfaces": []
		}
	},
	"engines": {
		"bun": ">=1.3.7"
	},
