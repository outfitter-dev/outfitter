{
  "name": "outfitter",
  "description": "Outfitter umbrella CLI for scaffolding and project management",
  "version": "0.2.0",
  "type": "module",
  "files": [
    "dist",
    "templates"
  ],
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./commands/demo/errors": {
      "import": {
        "types": "./dist/commands/demo/errors.d.ts",
        "default": "./dist/commands/demo/errors.js"
      }
    },
    "./commands/demo": {
      "import": {
        "types": "./dist/commands/demo.d.ts",
        "default": "./dist/commands/demo.js"
      }
    },
    "./actions": {
      "import": {
        "types": "./dist/actions.d.ts",
        "default": "./dist/actions.js"
      }
    },
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./commands/doctor": {
      "import": {
        "types": "./dist/commands/doctor.d.ts",
        "default": "./dist/commands/doctor.js"
      }
    },
    "./commands/init": {
      "import": {
        "types": "./dist/commands/init.d.ts",
        "default": "./dist/commands/init.js"
      }
    },
    "./commands/shared-deps": {
      "import": {
        "types": "./dist/commands/shared-deps.d.ts",
        "default": "./dist/commands/shared-deps.js"
      }
    },
    "./commands/add": {
      "import": {
        "types": "./dist/commands/add.d.ts",
        "default": "./dist/commands/add.js"
      }
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "outfitter": "./dist/cli.js",
    "out": "./dist/cli.js"
  },
  "sideEffects": false,
  "scripts": {
    "build": "bunup --filter outfitter",
    "postbuild": "bun link",
    "dev": "bun run src/cli.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "biome lint ./src",
    "lint:fix": "biome lint --write ./src",
    "typecheck": "tsc --noEmit",
    "sync:templates": "bun run ../../scripts/sync-templates.ts",
    "prepack": "bun run sync:templates",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@clack/prompts": "^0.10.0",
    "@outfitter/cli": "workspace:*",
    "@outfitter/config": "workspace:*",
    "@outfitter/contracts": "workspace:*",
    "@outfitter/logging": "workspace:*",
    "@outfitter/tooling": "workspace:*",
    "commander": "^14.0.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/bun": "^1.3.7",
    "@types/node": "^25.0.10",
    "typescript": "^5.9.3"
  },
  "engines": {
    "bun": ">=1.3.7"
  },
  "keywords": [
    "outfitter",
    "cli",
    "scaffolding",
    "typescript",
    "bun"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/outfitter-dev/outfitter.git",
    "directory": "apps/outfitter"
  }
}
