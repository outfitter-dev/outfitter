{
  "name": "outfitter-cli-demo",
  "version": "0.1.6",
  "private": true,
  "description": "CLI demo app for @outfitter/cli and @outfitter/tui primitives",
  "keywords": [
    "cli",
    "demo",
    "outfitter",
    "tui"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/outfitter-dev/outfitter.git",
    "directory": "apps/cli-demo"
  },
  "bin": {
    "cli-demo": "./dist/cli.js",
    "outfitter-demo": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "sideEffects": false,
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./cli-root-flags": {
      "import": {
        "types": "./dist/cli-root-flags.d.ts",
        "default": "./dist/cli-root-flags.js"
      }
    },
    "./commands/demo": {
      "import": {
        "types": "./dist/commands/demo.d.ts",
        "default": "./dist/commands/demo.js"
      }
    },
    "./commands/demo/errors": {
      "import": {
        "types": "./dist/commands/demo/errors.d.ts",
        "default": "./dist/commands/demo/errors.js"
      }
    },
    "./commands/demo/registry": {
      "import": {
        "types": "./dist/commands/demo/registry.d.ts",
        "default": "./dist/commands/demo/registry.js"
      }
    },
    "./output-mode": {
      "import": {
        "types": "./dist/output-mode.d.ts",
        "default": "./dist/output-mode.js"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "cd ../.. && bunup --filter outfitter-cli-demo",
    "dev": "bun run src/cli.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "oxlint ./src",
    "lint:fix": "oxlint --fix ./src",
    "pretypecheck": "(test -f ../../packages/tui/dist/index.d.ts || bun run --filter @outfitter/tui build) && (test -f ../../packages/cli/dist/output.d.ts || bun run --filter @outfitter/cli build)",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@clack/prompts": "catalog:",
    "@outfitter/cli": "workspace:*",
    "@outfitter/contracts": "workspace:*",
    "@outfitter/tui": "workspace:*",
    "commander": "catalog:",
    "typescript": "catalog:"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "@types/node": "catalog:"
  },
  "engines": {
    "bun": ">=1.3.10"
  }
}
