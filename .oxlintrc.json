{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "globals": { "Bun": "readonly" },
  "categories": {
    "correctness": "error",
    "suspicious": "error",
    "pedantic": "off",
    "perf": "off",
    "style": "off",
    "restriction": "off"
  },
  "ignorePatterns": [
    "**/node_modules/**",
    "**/dist/**",
    "**/.turbo/**",
    "**/*.gen.ts",
    "**/.outfitter/surface.json",
    "tmp/**",
    "apps/outfitter/.scratch/**"
  ],
  "rules": {
    "no-console": "off",
    "no-control-regex": "off",
    "no-shadow": "off",
    "no-unused-expressions": "off",
    "no-unused-vars": "off",
    "no-unsafe-optional-chaining": "off",
    "no-void": "off",
    "preserve-caught-error": "off",
    "require-await": "off",
    "typescript/require-await": "off"
  }
}
