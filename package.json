{
  "name": "outfitter",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*",
    "plugins/*"
  ],
  "scripts": {
    "prebuild": "./scripts/prebuild.sh",
    "verify:ci": "bun run typecheck && bun run check && bun run build && bun run test",
    "build": "bunup && bun scripts/normalize-exports.ts",
    "build:local": "bunup && bun scripts/normalize-exports.ts && cd apps/outfitter && bun link",
    "build:turbo": "turbo run build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "typecheck": "turbo run typecheck",
    "check": "ultracite check",
    "fix": "ultracite fix",
    "clean:artifacts": "turbo run clean && rm -rf .turbo",
    "clean": "turbo run clean && rm -rf node_modules",
    "changeset": "changeset",
    "version-packages": "changeset version && bun run sync-plugin-versions",
    "sync-plugin-versions": "bun run scripts/sync-plugin-versions.ts",
    "release": "turbo run build && bun run scripts/changeset-publish.ts",
    "publish:rc": "bun run scripts/publish-rc.ts",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.12",
    "@changesets/cli": "^2.29.8",
    "bunup": "^0.16.20",
    "lefthook": "^2.0.16",
    "turbo": "^2.7.5",
    "typescript": "^5.9.3",
    "ultracite": "7.1.1"
  },
  "packageManager": "bun@1.3.7",
  "engines": {
    "node": ">=24.0.0",
    "bun": ">=1.3.7"
  },
  "trustedDependencies": [
    "@biomejs/biome"
  ],
  "dependencies": {
    "smol-toml": "^1.6.0",
    "yaml": "^2.8.2"
  }
}
