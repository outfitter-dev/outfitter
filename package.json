{
  "name": "outfitter",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*",
    "plugins/*"
  ],
  "scripts": {
    "prebuild": "./scripts/prebuild.sh",
    "verify:ci": "bun run verify:ci:checks && bun run test",
    "verify:ci:checks": "bun run typecheck && bun run check && bun run check-publish-guardrails && bun run check-changeset && bun run check-bunup-registry && bun run check-preset-dependency-versions && bun run docs:check:ci && bun run docs:check:links && bun run check-exports && bun run check-readme-imports && bun run build && bun run check-clean-tree && bun run check-boundary-invocations",
    "check-changeset": "bun run apps/outfitter/src/commands/repo.ts check changeset --cwd .",
    "check-publish-guardrails": "bun run scripts/check-publish-guardrails.ts",
    "check-bunup-registry": "bun run apps/outfitter/src/commands/repo.ts check registry --cwd .",
    "check-preset-dependency-versions": "bun run scripts/check-preset-dependency-versions.ts",
    "check-exports": "bun run apps/outfitter/src/commands/repo.ts check exports --cwd .",
    "check-readme-imports": "bun run apps/outfitter/src/commands/repo.ts check readme --cwd .",
    "check-clean-tree": "bun run apps/outfitter/src/commands/repo.ts check tree --cwd .",
    "check-boundary-invocations": "bun run apps/outfitter/src/commands/repo.ts check boundary-invocations --cwd .",
    "docs:check:links": "bun run apps/outfitter/src/commands/repo.ts check markdown-links --cwd .",
    "build": "bunup && bun scripts/normalize-exports.ts",
    "build:local": "bunup && bun scripts/normalize-exports.ts && cd apps/outfitter && bun link",
    "build:turbo": "turbo run build",
    "docs:sync:core": "bun run apps/outfitter/src/commands/repo.ts export docs --cwd .",
    "docs:sync": "bun run apps/outfitter/src/commands/repo.ts sync docs --cwd .",
    "docs:check": "bun run apps/outfitter/src/commands/repo.ts check docs --cwd .",
    "docs:check:ci": "bun run apps/outfitter/src/commands/repo.ts export docs --cwd . && git diff --exit-code -- docs/llms.txt docs/llms-full.txt && test -z \"$(git ls-files --others --exclude-standard -- docs/llms.txt docs/llms-full.txt)\"",
    "docs:api": "typedoc && typedoc --options typedoc.markdown.json",
    "docs:api:html": "typedoc",
    "docs:api:md": "typedoc --options typedoc.markdown.json",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "typecheck": "turbo run typecheck",
    "check": "ultracite check",
    "fix": "ultracite fix",
    "clean:artifacts": "turbo run clean && rm -rf .turbo",
    "clean": "turbo run clean && rm -rf node_modules",
    "changeset": "changeset",
    "version-packages": "changeset version && bun run sync-plugin-versions",
    "sync-plugin-versions": "bun run scripts/sync-plugin-versions.ts",
    "release": "turbo run build && bun run scripts/changeset-publish.ts",
    "release:canary": "npx changeset version --snapshot canary && turbo run build && bun run scripts/changeset-publish.ts --tag canary",
    "publish:rc": "bun run scripts/publish-rc.ts",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.4",
    "@changesets/cli": "^2.29.8",
    "@outfitter/presets": "workspace:*",
    "bunup": "^0.16.29",
    "lefthook": "^2.1.1",
    "turbo": "^2.8.10",
    "typedoc": "^0.28.17",
    "typedoc-plugin-coverage": "^4.0.2",
    "typedoc-plugin-markdown": "^4.10.0",
    "typescript": "^5.9.3",
    "ultracite": "7.2.3"
  },
  "packageManager": "bun@1.3.9",
  "engines": {
    "node": ">=24.0.0",
    "bun": ">=1.3.9"
  },
  "catalog": {
    "@biomejs/biome": "2.4.4",
    "@clack/prompts": "^1.0.1",
    "@logtape/logtape": "^2.0.0",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@types/bun": "^1.3.9",
    "@types/node": "^25.3.0",
    "better-result": "^2.5.1",
    "bunup": "^0.16.29",
    "commander": "^14.0.2",
    "lefthook": "^2.1.1",
    "smol-toml": "^1.6.0",
    "typescript": "^5.9.3",
    "ultracite": "7.2.3",
    "yaml": "^2.8.2",
    "zod": "^4.3.5"
  },
  "trustedDependencies": [
    "@biomejs/biome"
  ],
  "dependencies": {
    "@clack/prompts": "^1.0.1",
    "@types/node": "^25.3.0",
    "smol-toml": "^1.6.0",
    "yaml": "^2.8.2",
    "zod": "^4.3.5"
  }
}
