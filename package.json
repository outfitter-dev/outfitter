{
  "name": "outfitter",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "plugins/*"
  ],
  "type": "module",
  "scripts": {
    "sync:all": "./scripts/workspace-sync.sh",
    "verify:ci": "bun run verify:ci:checks && bun run test",
    "verify:ci:checks": "bun run typecheck && bun run check && bun run check-publish-guardrails && bun run check-changeset && bun run check-bunup-registry && bun run check-preset-dependency-versions && bun run docs:check:ci && bun run docs:check:links && bun run check-exports && bun run check-readme-imports && bun run build:verify && bun run check-clean-tree && bun run check-boundary-invocations && bun run check-canonical-surface-map && bun run check-surface-map-format && bun run schema:diff",
    "check-changeset": "bun run apps/outfitter/src/commands/repo.ts check changeset --cwd .",
    "check-publish-guardrails": "bun run apps/outfitter/src/cli.ts check publish-guardrails --cwd .",
    "check-bunup-registry": "bun run apps/outfitter/src/commands/repo.ts check registry --cwd .",
    "check-preset-dependency-versions": "bun run apps/outfitter/src/cli.ts check preset-versions --cwd .",
    "check-exports": "bun run apps/outfitter/src/commands/repo.ts check exports --cwd .",
    "check-readme-imports": "bun run apps/outfitter/src/commands/repo.ts check readme --cwd .",
    "check-clean-tree": "bun run apps/outfitter/src/commands/repo.ts check tree --cwd .",
    "check-boundary-invocations": "bun run apps/outfitter/src/commands/repo.ts check boundary-invocations --cwd .",
    "check-canonical-surface-map": "bun run apps/outfitter/src/cli.ts check surface-map --cwd .",
    "check-surface-map-format": "bun run apps/outfitter/src/cli.ts check surface-map-format --cwd .",
    "exports:check": "bun scripts/normalize-exports.ts --check",
    "schema:diff": "bun run apps/outfitter/src/cli.ts schema diff",
    "docs:check:links": "bun run apps/outfitter/src/commands/repo.ts check markdown-links --cwd .",
    "build:verify": "bun run build && bun run exports:check",
    "build": "turbo run build && bun scripts/normalize-exports.ts",
    "docs:sync:core": "bun run apps/outfitter/src/commands/repo.ts export docs --cwd .",
    "docs:sync:readme": "bun run --filter @outfitter/docs build && bun run packages/docs/dist/cli.js docs sync-readme --cwd .",
    "docs:sync": "bun run apps/outfitter/src/commands/repo.ts sync docs --cwd . && bun run docs:sync:readme",
    "docs:check": "bun run apps/outfitter/src/commands/repo.ts check docs --cwd .",
    "docs:check:readme-sentinel": "bun run apps/outfitter/src/cli.ts check docs-sentinel --cwd .",
    "docs:sync:release:llms": "bun run apps/outfitter/src/commands/repo.ts export docs --cwd . --target llms && bun run apps/outfitter/src/commands/repo.ts export docs --cwd . --target llms-full",
    "docs:check:ci": "bun run docs:check:readme-sentinel",
    "docs:check:release:llms": "bun run apps/outfitter/src/commands/repo.ts export docs --cwd . --target llms && bun run apps/outfitter/src/commands/repo.ts export docs --cwd . --target llms-full && git diff --exit-code -- docs/llms.txt docs/llms-full.txt && test -z \"$(git ls-files --others --exclude-standard -- docs/llms.txt docs/llms-full.txt)\"",
    "docs:api": "typedoc && typedoc --options typedoc.markdown.json",
    "docs:api:html": "typedoc",
    "docs:api:md": "typedoc --options typedoc.markdown.json",
    "lint": "turbo run lint --no-daemon",
    "lint:fix": "turbo run lint:fix --no-daemon",
    "test": "turbo run test --no-daemon",
    "test:watch": "turbo run test:watch --no-daemon",
    "typecheck": "turbo run typecheck --no-daemon",
    "check": "oxlint . && oxfmt --check .",
    "fix": "oxlint --fix .",
    "clean:artifacts": "turbo run clean --no-daemon && rm -rf .turbo",
    "clean": "turbo run clean --no-daemon && rm -rf node_modules .turbo",
    "changeset": "changeset",
    "version-packages": "changeset version && bun run sync-plugin-versions",
    "sync-plugin-versions": "bun run scripts/sync-plugin-versions.ts",
    "release": "bun run build && bun run scripts/changeset-publish.ts",
    "release:canary": "npx changeset version --snapshot canary && bun run build && bun run scripts/changeset-publish.ts --tag canary",
    "publish:rc": "bun run scripts/publish-rc.ts",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@clack/prompts": "^1.0.1",
    "@outfitter/oxlint-plugin": "workspace:*",
    "@outfitter/presets": "workspace:*",
    "@types/node": "^25.3.0",
    "bunup": "^0.16.29",
    "lefthook": "^2.1.1",
    "oxfmt": "0.35.0",
    "oxlint": "1.50.0",
    "smol-toml": "^1.6.0",
    "turbo": "^2.8.10",
    "typedoc": "^0.28.17",
    "typedoc-plugin-coverage": "^4.0.2",
    "typedoc-plugin-markdown": "^4.10.0",
    "typescript": "^5.9.3",
    "ultracite": "7.2.3",
    "yaml": "^2.8.2",
    "zod": "^4.3.5"
  },
  "engines": {
    "bun": ">=1.3.9",
    "node": ">=24.0.0"
  },
  "packageManager": "bun@1.3.9",
  "catalog": {
    "@clack/prompts": "^1.0.1",
    "@logtape/logtape": "^2.0.0",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@types/bun": "^1.3.9",
    "@types/node": "^25.3.0",
    "better-result": "^2.5.1",
    "bunup": "^0.16.29",
    "commander": "^14.0.2",
    "lefthook": "^2.1.1",
    "oxfmt": "0.35.0",
    "oxlint": "1.50.0",
    "smol-toml": "^1.6.0",
    "typescript": "^5.9.3",
    "ultracite": "7.2.3",
    "yaml": "^2.8.2",
    "zod": "^4.3.5"
  },
  "trustedDependencies": [
    "oxfmt",
    "oxlint"
  ]
}
