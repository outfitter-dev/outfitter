{
  "name": "@outfitter/oxlint-plugin",
  "description": "Custom lint rules for Outfitter architecture and safety conventions",
  "version": "0.1.1",
  "type": "module",
  "files": [
    "dist"
  ],
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "scripts": {
    "build": "cd ../.. && bunup --filter @outfitter/oxlint-plugin",
    "lint": "oxlint ./src",
    "lint:fix": "oxlint --fix ./src",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun ../../scripts/check-publish-manifest.ts"
  },
  "peerDependencies": {
    "eslint": ">=9.0.0"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "typescript": "catalog:"
  },
  "keywords": [
    "outfitter",
    "eslint",
    "oxlint",
    "lint",
    "plugin"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/outfitter-dev/outfitter.git",
    "directory": "packages/oxlint-plugin"
  },
  "publishConfig": {
    "access": "public"
  }
}
