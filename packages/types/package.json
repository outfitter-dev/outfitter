{
	"name": "@outfitter/types",
	"version": "0.0.1",
	"description": "Branded types, type guards, and type utilities for Outfitter",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "bun build ./src/index.ts --outdir ./dist --target bun && bun run build:types",
		"build:types": "tsc --emitDeclarationOnly --declaration --declarationMap --outDir dist",
		"test": "bun test",
		"typecheck": "tsc --noEmit",
		"clean": "rm -rf dist"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"typescript": "^5.8.0"
	},
	"keywords": [
		"outfitter",
		"types",
		"branded",
		"typescript"
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/outfitter-dev/kit.git",
		"directory": "packages/types"
	}
}
