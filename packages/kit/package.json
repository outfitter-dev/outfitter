    "@outfitter/file-ops": ">=0.1.0-rc.1",
    "@outfitter/index": ">=0.1.0-rc.1",
    "@outfitter/logging": ">=0.1.0-rc.1",
    "@outfitter/mcp": ">=0.1.0-rc.1",
    "@outfitter/state": ">=0.1.0-rc.1",
    "@outfitter/testing": ">=0.1.0-rc.1",
    "@outfitter/types": ">=0.1.0-rc.1",
    "@outfitter/ui": ">=0.1.0-rc.1"
  },
  "peerDependenciesMeta": {
    "@outfitter/cli": {
      "optional": true
    },
    "@outfitter/config": {
      "optional": true
    },
    "@outfitter/contracts": {
      "optional": true
    },
    "@outfitter/daemon": {
      "optional": true
    },
    "@outfitter/file-ops": {
      "optional": true
    },
    "@outfitter/index": {
      "optional": true
    },
    "@outfitter/logging": {
      "optional": true
    },
    "@outfitter/mcp": {
      "optional": true
    },
    "@outfitter/state": {
      "optional": true
    },
    "@outfitter/testing": {
      "optional": true
    },
    "@outfitter/types": {
      "optional": true
    },
    "@outfitter/ui": {
      "optional": true
    }
  },
  "scripts": {
    "build": "bunup --filter @outfitter/kit",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.8.0"
  },
  "publishConfig": {
    "access": "public"
