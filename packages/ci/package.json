{
  "name": "@outfitter/ci",
  "description": "CI/CD workflow templates and initialization tooling for Outfitter projects",
  "version": "0.1.0",
  "type": "module",
  "files": [
    "dist",
    "workflows",
    "scripts"
  ],
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./cli/init": {
      "import": {
        "types": "./dist/cli/init.d.ts",
        "default": "./dist/cli/init.js"
      }
    },
    "./package.json": "./package.json"
  },
  "bin": "./dist/cli/index.js",
  "sideEffects": false,
  "scripts": {
    "build": "cd ../.. && bunup --filter @outfitter/ci",
    "lint": "biome lint ./src ./scripts",
    "lint:fix": "biome lint --write ./src ./scripts",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "better-result": "^2.5.1",
    "commander": "^14.0.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "outfitter",
    "ci",
    "github-actions",
    "changesets"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/outfitter-dev/outfitter.git",
    "directory": "packages/ci"
  },
  "engines": {
    "bun": ">=1.3.7"
  },
  "publishConfig": {
    "access": "public"
  }
}
