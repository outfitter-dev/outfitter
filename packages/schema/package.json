{
  "name": "@outfitter/schema",
  "version": "0.2.2",
  "description": "Schema introspection, surface map generation, and drift detection for Outfitter",
  "keywords": [
    "introspection",
    "manifest",
    "outfitter",
    "schema",
    "surface-map",
    "typescript"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/outfitter-dev/outfitter.git",
    "directory": "packages/schema"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "sideEffects": false,
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./diff": {
      "import": {
        "types": "./dist/diff/index.d.ts",
        "default": "./dist/diff/index.js"
      }
    },
    "./diff/actions": {
      "import": {
        "types": "./dist/diff/actions.d.ts",
        "default": "./dist/diff/actions.js"
      }
    },
    "./diff/metadata": {
      "import": {
        "types": "./dist/diff/metadata.d.ts",
        "default": "./dist/diff/metadata.js"
      }
    },
    "./diff/shared": {
      "import": {
        "types": "./dist/diff/shared.d.ts",
        "default": "./dist/diff/shared.js"
      }
    },
    "./diff/types": {
      "import": {
        "types": "./dist/diff/types.d.ts",
        "default": "./dist/diff/types.js"
      }
    },
    "./manifest": {
      "import": {
        "types": "./dist/manifest.d.ts",
        "default": "./dist/manifest.js"
      }
    },
    "./markdown": {
      "import": {
        "types": "./dist/markdown.d.ts",
        "default": "./dist/markdown.js"
      }
    },
    "./package.json": "./package.json",
    "./surface": {
      "import": {
        "types": "./dist/surface.d.ts",
        "default": "./dist/surface.js"
      }
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "cd ../.. && bunup --filter @outfitter/schema",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "oxlint ./src",
    "lint:fix": "oxlint --fix ./src",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun ../../scripts/check-publish-manifest.ts"
  },
  "dependencies": {
    "@outfitter/contracts": "workspace:*",
    "@outfitter/types": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "zod": ">=4.0.0"
  },
  "engines": {
    "bun": ">=1.3.9"
  }
}
