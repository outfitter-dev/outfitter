{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["eslint"],
  "globals": { "Bun": "readonly" },
  "categories": {
    "correctness": "error",
    "suspicious": "error",
    "pedantic": "off",
    "perf": "off",
    "style": "off",
    "restriction": "off"
  },
  "ignorePatterns": [
    "**/node_modules/**",
    "**/dist/**",
    "**/.turbo/**",
    "**/*.gen.ts"
  ],
  "rules": {
    "no-void": "off"
  }
}
