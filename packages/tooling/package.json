{
  "name": "@outfitter/tooling",
  "description": "Dev tooling configuration presets for Outfitter projects (biome, typescript, lefthook)",
  "version": "0.1.0-rc.1",
  "type": "module",
  "files": [
    "dist",
    "biome.json",
    "tsconfig.preset.json",
    "tsconfig.preset.bun.json",
    "lefthook.yml"
  ],
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./cli/init": {
      "import": {
        "types": "./dist/cli/init.d.ts",
        "default": "./dist/cli/init.js"
      }
    },
    "./cli/fix": {
      "import": {
        "types": "./dist/cli/fix.d.ts",
        "default": "./dist/cli/fix.js"
      }
    },
    "./cli/check": {
      "import": {
        "types": "./dist/cli/check.d.ts",
        "default": "./dist/cli/check.js"
      }
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "tooling": "./dist/cli/index.js"
  },
  "sideEffects": false,
  "scripts": {
    "build": "bunup --filter @outfitter/tooling",
    "lint": "biome lint ./src",
    "lint:fix": "biome lint --write ./src",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "commander": "^14.0.2"
  },
  "devDependencies": {
    "@types/bun": "^1.3.7",
    "typescript": "^5.9.3",
    "yaml": "^2.8.2"
  },
  "peerDependencies": {
    "ultracite": "^7.0.0",
    "lefthook": "^2.0.0"
  },
  "peerDependenciesMeta": {
    "ultracite": {
      "optional": true
    },
    "lefthook": {
      "optional": true
    }
  },
  "engines": {
    "bun": ">=1.3.7"
  },
  "keywords": [
    "outfitter",
    "tooling",
    "biome",
    "typescript",
    "lefthook",
    "config",
    "presets"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/outfitter-dev/outfitter.git",
    "directory": "packages/tooling"
  },
  "publishConfig": {
    "access": "public"
  }
}
