{
  "name": "@outfitter/logging",
  "version": "0.4.1",
  "description": "Structured logging via logtape with redaction support for Outfitter",
  "keywords": [
    "logging",
    "logtape",
    "outfitter",
    "structured",
    "typescript"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/outfitter-dev/outfitter.git",
    "directory": "packages/logging"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "sideEffects": false,
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "cd ../.. && bunup --filter @outfitter/logging",
    "lint": "oxlint ./src",
    "lint:fix": "oxlint --fix ./src",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun ../../scripts/check-publish-manifest.ts"
  },
  "dependencies": {
    "@logtape/logtape": "catalog:"
  },
  "devDependencies": {
    "@outfitter/config": "workspace:*",
    "@outfitter/contracts": "workspace:*",
    "@types/bun": "catalog:",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "@outfitter/config": ">=0.3.0",
    "@outfitter/contracts": ">=0.2.0"
  }
}
