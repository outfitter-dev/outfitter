{
  "name": "@outfitter/docs",
  "description": "Docs CLI, core assembly primitives, freshness checks, and host adapter for Outfitter docs workflows",
  "version": "0.1.2",
  "type": "module",
  "files": [
    "dist"
  ],
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./core": {
      "import": {
        "types": "./dist/core/index.d.ts",
        "default": "./dist/core/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "outfitter-docs": "./dist/cli.js"
  },
  "sideEffects": false,
  "scripts": {
    "build": "bunup --filter @outfitter/docs",
    "lint": "biome lint ./src",
    "lint:fix": "biome lint --write ./src",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun ../../scripts/check-publish-manifest.ts"
  },
  "dependencies": {
    "better-result": "catalog:",
    "commander": "catalog:"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "typescript": "catalog:"
  },
  "keywords": [
    "outfitter",
    "docs",
    "cli",
    "typescript"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/outfitter-dev/outfitter.git",
    "directory": "packages/docs"
  },
  "publishConfig": {
    "access": "public"
  }
}
