{
  "name": "@outfitter/testing",
  "version": "0.2.4",
  "description": "Test harnesses, fixtures, and utilities for Outfitter packages",
  "keywords": [
    "fixtures",
    "harness",
    "outfitter",
    "testing",
    "typescript"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/outfitter-dev/outfitter.git",
    "directory": "packages/testing"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "sideEffects": false,
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./cli-harness": {
      "import": {
        "types": "./dist/cli-harness.d.ts",
        "default": "./dist/cli-harness.js"
      }
    },
    "./cli-helpers": {
      "import": {
        "types": "./dist/cli-helpers.d.ts",
        "default": "./dist/cli-helpers.js"
      }
    },
    "./fixtures": {
      "import": {
        "types": "./dist/fixtures.d.ts",
        "default": "./dist/fixtures.js"
      }
    },
    "./mcp-harness": {
      "import": {
        "types": "./dist/mcp-harness.d.ts",
        "default": "./dist/mcp-harness.js"
      }
    },
    "./mock-factories": {
      "import": {
        "types": "./dist/mock-factories.d.ts",
        "default": "./dist/mock-factories.js"
      }
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "cd ../.. && bunup --filter @outfitter/testing",
    "lint": "oxlint ./src",
    "lint:fix": "oxlint --fix ./src",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun ../../scripts/check-publish-manifest.ts"
  },
  "dependencies": {
    "@outfitter/contracts": "workspace:*",
    "@outfitter/mcp": "workspace:*",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "typescript": "catalog:"
  }
}
