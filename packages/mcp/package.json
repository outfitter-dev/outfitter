{
  "name": "@outfitter/mcp",
  "version": "0.4.3",
  "description": "MCP server framework with typed tools for Outfitter",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "outfitter",
    "tools",
    "typescript"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/outfitter-dev/outfitter.git",
    "directory": "packages/mcp"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "sideEffects": false,
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./actions": {
      "import": {
        "types": "./dist/actions.d.ts",
        "default": "./dist/actions.js"
      }
    },
    "./core-tools": {
      "import": {
        "types": "./dist/core-tools.d.ts",
        "default": "./dist/core-tools.js"
      }
    },
    "./logging": {
      "import": {
        "types": "./dist/logging.d.ts",
        "default": "./dist/logging.js"
      }
    },
    "./package.json": "./package.json",
    "./schema": {
      "import": {
        "types": "./dist/schema.d.ts",
        "default": "./dist/schema.js"
      }
    },
    "./server": {
      "import": {
        "types": "./dist/server.d.ts",
        "default": "./dist/server.js"
      }
    },
    "./transport": {
      "import": {
        "types": "./dist/transport.d.ts",
        "default": "./dist/transport.js"
      }
    },
    "./types": {
      "import": {
        "types": "./dist/types.d.ts",
        "default": "./dist/types.js"
      }
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "cd ../.. && bunup --filter @outfitter/mcp",
    "lint": "oxlint ./src",
    "lint:fix": "oxlint --fix ./src",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun ../../scripts/check-publish-manifest.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@outfitter/config": "workspace:*",
    "@outfitter/contracts": "workspace:*",
    "@outfitter/logging": "workspace:*",
    "@types/bun": "catalog:",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "@outfitter/config": ">=0.3.0",
    "@outfitter/contracts": ">=0.2.0",
    "@outfitter/logging": ">=0.3.0"
  }
}
