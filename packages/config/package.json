{
  "name": "@outfitter/config",
  "version": "0.3.3",
  "description": "XDG-compliant config loading with schema validation for Outfitter",
  "keywords": [
    "config",
    "outfitter",
    "typescript",
    "xdg"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/outfitter-dev/outfitter.git",
    "directory": "packages/config"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "sideEffects": false,
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./env": {
      "import": {
        "types": "./dist/env.d.ts",
        "default": "./dist/env.js"
      }
    },
    "./environment": {
      "import": {
        "types": "./dist/environment.d.ts",
        "default": "./dist/environment.js"
      }
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "cd ../.. && bunup --filter @outfitter/config",
    "lint": "oxlint ./src",
    "lint:fix": "oxlint --fix ./src",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun ../../scripts/check-publish-manifest.ts"
  },
  "dependencies": {
    "@outfitter/contracts": "workspace:*",
    "@outfitter/types": "workspace:*",
    "smol-toml": "catalog:",
    "yaml": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "typescript": "catalog:"
  }
}
