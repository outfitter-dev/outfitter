{
  "formatter": "language_server",
  "format_on_save": "on",
  "lsp": {
    "typescript-language-server": {
      "settings": {
        "typescript": {
          "preferences": {
            "includePackageJsonAutoImports": "on"
          }
        }
      }
    }
  },
  "languages": {
    "JavaScript": {
      "formatter": {
        "language_server": {
          "name": "oxc"
        }
      },
      "code_actions_on_format": {
        "source.fixAll.oxc": true,
        "source.organizeImports.oxc": true
      }
    },
    "TypeScript": {
      "formatter": {
        "language_server": {
          "name": "oxc"
        }
      },
      "code_actions_on_format": {
        "source.fixAll.oxc": true,
        "source.organizeImports.oxc": true
      }
    },
    "TSX": {
      "formatter": {
        "language_server": {
          "name": "oxc"
        }
      },
      "code_actions_on_format": {
        "source.fixAll.oxc": true,
        "source.organizeImports.oxc": true
      }
    }
  }
}
